{
    "name": "form-validation-problem",
    "version": "1.0.0",
    "repository": "https://github.com/michelmattos/form-validation-problem.git",
    "author": "Michel Mattos <mattos.michel@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "yarn build && serve . -p 8080",
        "flow": "flow",
        "lint": "eslint src/**",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:e2e": "testcafe chrome e2e/ --app 'yarn start'",
        "test:e2e:headless": "testcafe chrome:headless e2e/ --app 'yarn start'",
        "test:e2e:all": "testcafe all e2e/",
        "build": "webpack --mode=production"
    },
    "eslintConfig": {
        "extends": [
            "plugin:springload/prettier",
            "plugin:flowtype/recommended"
        ],
        "parser": "babel-eslint",
        "plugins": ["flowtype"],
        "rules": {
            "strict": 0
        }
    },
    "jest": {
        "setupTestFrameworkScriptFile": "<rootDir>/setupTest.js"
    },
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-eslint": "^8.2.3",
        "babel-loader": "^7.1.4",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "eslint": "4",
        "eslint-plugin-flowtype": "^2.46.3",
        "eslint-plugin-springload": "^2.2.0",
        "flow-bin": "^0.71.0",
        "jest": "^22.4.3",
        "jquery": "^3.3.1",
        "prettier": "^1.12.1",
        "serve": "^6.5.6",
        "testcafe": "^0.19.2",
        "webpack": "^4.6.0",
        "webpack-cli": "^2.1.2"
    },
    "dependencies": {
        "react": "^16.3.2",
        "react-dom": "^16.3.2"
    }
}
